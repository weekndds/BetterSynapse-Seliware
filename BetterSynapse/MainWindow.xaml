                    <Border Background="{DynamicResource PrimaryLighterColor}" Margin="-1" BorderBrush="{Binding Path=BorderBrush, ElementName=Main}" CornerRadius="0, 0, 5, 5" VerticalAlignment="Bottom" BorderThickness="1,0,1,1">
                        <DockPanel LastChildFill="False">
                            <Button x:Name="SettingsButton" Content="&#xeb51;" Width="25" Height="25" Margin="2" FontSize="16" FontFamily="{DynamicResource Codicon}" DockPanel.Dock="Right" Click="SettingsButton_Click" ToolTip="Settings"/>
