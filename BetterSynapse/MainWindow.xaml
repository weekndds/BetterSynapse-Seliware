                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20"
                                              ShadowDepth="0"/>
                            </Border.Effect>

                            <StackPanel Margin="5">
                                <DockPanel Margin="5">
                                    <Button Content="&#xe8bb;" DockPanel.Dock="Right" Width="24" Height="24" FontFamily="{DynamicResource Segoe Fluent Icons}" Click="Panels_Click"/>
                                    <Label Content="Settings" FontSize="14"/>
                                </DockPanel>

                                <CheckBox x:Name="TopMost" Content="Always On Top" Checked="TopMost_Checked" Unchecked="TopMost_Checked"/>
                                <CheckBox x:Name="AutoAttach" Content="Auto Attach" Checked="AutoAttach_Checked" Unchecked="AutoAttach_Checked"/>
                                <CheckBox x:Name="UnlockFPS" Content="Unlock FPS" Checked="UnlockFPS_Checked" Unchecked="UnlockFPS_Checked"/>
                                <Button x:Name="KillRobloxButton" Content="Kill Roblox" Margin="5" Padding="5, 3" Background="#FFE40000" Click="KillRobloxButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="ScriptHubPanelIn" Background="{DynamicResource PrimaryWindowColor}" CornerRadius="5" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" Margin="20" Padding="0">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20"
                                              ShadowDepth="0"/>
                            </Border.Effect>

                            <DockPanel Margin="5">
                                <DockPanel DockPanel.Dock="Top" Margin="5">
                                    <Button Content="&#xe8bb;" DockPanel.Dock="Right" Width="24" Height="24" FontFamily="{DynamicResource Segoe Fluent Icons}" Click="Panels_Click"/>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="ScriptHubTitle" Text="Script Hub" FontSize="14"/>
                                            <TextBlock Text="(Powered by rbxscripts.xyz)" Margin="3, 0, 0, 0" VerticalAlignment="Center" FontSize="10" Opacity="0.5"/>
                                        </StackPanel>
                                    </Label>
                                    <Border Background="{DynamicResource PrimaryDarkerColor}" CornerRadius="3"  Margin="5, 3">
                                        <DockPanel Margin="2">
                                            <TextBlock Text="&#xe721;" FontFamily="{DynamicResource 'Segoe Fluent Icons'}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="2" Opacity="0.5"/>
                                            <TextBox x:Name="ScriptHubSearchBar" Margin="2,2,2,2" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource PrimaryTextColor}"/>
                                        </DockPanel>
                                    </Border>
                                </DockPanel>

                                <ScrollViewer DockPanel.Dock="Bottom">
                                    <WrapPanel x:Name="ScriptHubPanel"/>
                                </ScrollViewer>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border x:Name="border" Background="{DynamicResource PrimaryLighterColor}" Margin="-1, 0, -1, -1" CornerRadius="0, 0, 5, 5" BorderThickness="1,0,1,1" RenderTransformOrigin="0.5,0" Visibility="Collapsed">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <StackPanel x:Name="stackPanel" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <StackPanel.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </StackPanel.RenderTransform>
                        <Image Source="Assets/Images/SynapseIcon.png" Width="150" Height="150" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock x:Name="LoadingText" Text="Initializing..." Margin="0, 30, 0, 5" HorizontalAlignment="Center" FontSize="14"/>
                        <ProgressBar x:Name="LoadingBar" Height="10" Width="300"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</Window>
