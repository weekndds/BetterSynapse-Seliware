    <Window.Resources>
        <Storyboard x:Key="RainbowBorderStoryboard">
            <ColorAnimationUsingKeyFrames RepeatBehavior="Forever" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" Storyboard.TargetName="Main">
